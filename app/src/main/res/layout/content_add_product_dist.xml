<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.goods24.distributor.AddProductDistActivity"
    tools:showIn="@layout/activity_add_product_dist">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/AddProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/addProdImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/AddProduct"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginBottom="30dp">

                <Button
                    android:id="@+id/selectImageButtonAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    android:text="Select Image"
                    android:background="@drawable/button_design_background"
                    android:textColor="#FFFFFF"/>
            </RelativeLayout>

            <Spinner
                android:id="@+id/prodCategorySpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"/>

            <EditText
                android:id="@+id/prodNameAddText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Product Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/prodDescAddText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Product Description"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/prodQuantAddText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Product quantity"
                android:inputType="number" />

            <EditText
                android:id="@+id/prodRateAddText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Product Rate"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/prodDiscountAddText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Product Discount"
                android:inputType="numberDecimal" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/addItemButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/button_design_background"
                    android:text="Add Item"
                    android:textColor="#FFFFFF"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
