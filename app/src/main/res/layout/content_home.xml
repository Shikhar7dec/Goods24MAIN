<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.goods24.HomeActivity"
    tools:showIn="@layout/activity_home">

    <TextView
        android:id="@+id/userTypeTextView"
        android:layout_width="131dp"
        android:layout_height="48dp"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="60dp"
        android:layout_below="@+id/welcomeTextView"
        android:layout_alignLeft="@+id/welcomeTextView"
        android:layout_alignStart="@+id/welcomeTextView"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="131dp"
        android:layout_height="48dp"
        android:text="Welcome"
        android:textColor="@android:color/holo_orange_dark"
        android:textColorLink="@android:color/background_light"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="12dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="202dp"
        android:layout_height="22dp"
        android:text="This app is under development "
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="214dp"
        android:layout_below="@+id/userTypeTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />

</RelativeLayout>
