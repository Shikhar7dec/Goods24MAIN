<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/userAsText"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:fontFamily="serif"
        android:text="User"
        android:textSize="18sp"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_alignTop="@+id/radioGroup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/distributorAsText"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:fontFamily="serif"
        android:text="Distributor"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/radioGroup"
        android:layout_alignLeft="@+id/userAsText"
        android:layout_alignStart="@+id/userAsText" />



    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <RadioButton
            android:id="@+id/userRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/distributorAsText"
            android:layout_alignBottom="@+id/distributorAsText"
            android:layout_alignLeft="@+id/userRadio"
            android:layout_alignStart="@+id/userRadio"
            android:onClick="onUtypeRadio" />

        <RadioButton
            android:id="@+id/distributorRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/userAsText"
            android:layout_marginEnd="29dp"
            android:layout_marginRight="29dp"
            android:onClick="onUtypeRadio" />
        </RadioGroup>



</RelativeLayout>